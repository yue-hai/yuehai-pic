<?xml version="1.0" encoding="utf-8"?>
<!-- values 目录是默认的资源值目录，用于存放通用的资源值，适用于大多数 Android 版本。在这个目录中定义的资源值将被应用于所有 Android 设备，无论其版本号。 -->
<resources>
	<!-- 隐藏通知栏的样式 -->
	<style name="NoTitleBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
	</style>
	
	<!-- 顶部按钮 -->
	<style name="ToolBarImageButton" parent="Widget.AppCompat.ImageButton">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">@drawable/selector_tool_bar_background</item>
		<item name="android:gravity">center</item>
	</style>
	
	<!-- 侧边栏下方菜单 -->
	<style name="SidebarMenuControlTextView" parent="Widget.AppCompat.TextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingStart">@dimen/dp_24</item>
		<item name="android:paddingEnd">@dimen/dp_24</item>
		<item name="android:paddingTop">@dimen/dp_15</item>
		<item name="android:paddingBottom">@dimen/dp_15</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/sp_16</item>
		<item name="android:gravity">start|center</item>
		<item name="android:background">@drawable/selector_sidebar_menu_light_mode</item>
		<item name="android:drawablePadding">@dimen/dp_20</item>
	</style>
	
	<!-- 图片详情，顶部与底部操作按钮 -->
	<style name="ImageViewerOperatingButton" parent="Widget.AppCompat.TextView">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">@dimen/dp_70</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingTop">@dimen/dp_10</item>
		<item name="android:paddingBottom">@dimen/dp_5</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/sp_10</item>
		<item name="android:background">@drawable/selector_sidebar_menu_dark_mode</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
	</style>

	<!-- 设置分类提示文字 -->
	<style name="SettingsClassifyTextView" parent="Widget.AppCompat.TextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">@dimen/dp_12</item>
		<item name="android:textSize">@dimen/sp_16</item>
		<item name="android:textColor">@color/yuehai_light_blue</item>
	</style>
	
	<!-- 设置项，外部 LinearLayout -->
	<style name="SettingsItemsLinearLayout" parent="Widget.AppCompat.TextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">@dimen/dp_10</item>
		<item name="android:background">@drawable/selector_sidebar_menu_light_mode</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:orientation">vertical</item>
	</style>
	<!-- 设置项，名称 -->
	<style name="SettingsItemsOptionTextView" parent="Widget.AppCompat.TextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/sp_16</item>
		<item name="android:textColor">@color/black</item>
	</style>
	<!-- 设置项，说明 -->
	<style name="SettingsItemsDescriptionTextView" parent="Widget.AppCompat.TextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/sp_12</item>
		<item name="android:textColor">@color/yuehai_dark_gray_slightly_light</item>
	</style>

</resources>